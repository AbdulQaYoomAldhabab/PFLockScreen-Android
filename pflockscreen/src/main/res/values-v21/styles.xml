<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PFLockScreenButtonStyle">
        <!-- Customize your theme here. -->
        <item name="android:layout_height">@dimen/button_lock_screen_fp_size</item>
        <item name="android:layout_width">@dimen/button_lock_screen_fp_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:foreground">@drawable/circle_background_pf_lock_screen</item>
        <item name="android:theme">@style/PFCodeButtonHighlight</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


    <style name="PFCodeButtonStyle">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:theme">@style/PFCodeButtonHighlight</item>
    </style>

    <style name="PFCodeButtonHighlight">
        <item name="colorControlHighlight">@color/white_selector_pf</item>
    </style>
</resources>
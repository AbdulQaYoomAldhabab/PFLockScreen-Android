<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="pf_key_button">@style/MyLockScreenButtonStyle</item>
        <item name="pf_fingerprint_button">@style/MyLockScreenFingerprintButtonStyle</item>
        <item name="pf_delete_button">@style/MyLockScreenDeleteButtonStyle</item>
        <item name="pf_lock_screen">@style/MyLockScreenStyle</item>
    </style>


    <style name="MyLockScreenStyle">
        <item name="android:background">@color/background_lock_screen_pf</item>
    </style>

    <style name="MyLockScreenButtonStyle">
        <!-- Customize your theme here. -->
        <item name="android:layout_height">@dimen/button_lock_screen_fp_size</item>
        <item name="android:layout_width">@dimen/button_lock_screen_fp_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/touch_selector</item>
        <item name="android:foreground">@drawable/circle_background_pf_lock_screen</item>
    </style>

    <style name="MyLockScreenFingerprintButtonStyle">
        <item name="android:src">@drawable/fingerprint_lockscreen_pf</item>
    </style>

    <style name="MyLockScreenDeleteButtonStyle">
        <item name="android:src">@drawable/delete_lockscreen_pf</item>
    </style>


</resources>
